<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hottopic_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1"
        android:layout_below="@+id/text1"></com.facebook.drawee.view.SimpleDraweeView>

    <TextView
        android:id="@+id/hottopic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hottopic_pic"
        android:layout_toRightOf="@+id/hottopic_pic"
        android:text="TextView" />

    <TextView
        android:id="@+id/hottopic_desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/hottopic_name"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/hottopic_pic"
        android:layout_toRightOf="@+id/hottopic_pic"
        android:text="TextView" />

    <TextView
        android:id="@+id/hottopic_desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hottopic_pic"
        android:layout_toEndOf="@+id/hottopic_pic"
        android:layout_toRightOf="@+id/hottopic_pic"
        android:text="TextView" />
</RelativeLayout>